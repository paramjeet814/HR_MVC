@model IEnumerable<HRMVC.Models.Customer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>

<h1>Index</h1>

<p>
    <button class="alert-heading">   <a asp-action="Create">Create New</a></button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                <button class="alert-heading">
                    <a asp-action="Edit" asp-route-id="@item.Customerid">Edit</a> |
                </button>
                <button class="alert-heading">
                    <a asp-action="Details" asp-route-id="@item.Customerid">Details</a> |
                </button>
                <button class="alert-heading">
                    <a asp-action="Delete" asp-route-id="@item.Customerid">Delete</a>
                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
    </center>